@using MVC_Web.Models
@model List<OrdersDetailViewModel>

@{
}

<style>
    .product-image {
        max-width: 100%;
        max-height: 100px;
        border-radius: 10px;
    }
</style>

<table class="table table-hover table-sm text-center mt-2 mb-2">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>Název</th>
            <th>Výrobce</th>
            <th>Kategorie</th>
            <th>Cena za kus</th>
            <th>Množství</th>
            <th>Celková cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrdersDetailViewModel detail in Model)
        {
            <tr>
                <td class="align-middle">
                    <img src="@Url.Content("~/images/Products/" + detail.ProductId + ".jpg")" alt="@detail.Product.Name" class="product-image">
                </td>
                <td class="align-middle">@detail.Product.Name</td>
                <td class="align-middle">@detail.Product.Manufacturer.Name</td>
                <td class="align-middle">@detail.Product.Category.Name</td>
                <td class="align-middle">@detail.Product.Price</td>
                <td class="align-middle">@detail.ProductsCount</td>
                <td class="align-middle">@detail.TotalPrice Kč</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="MyOrders" asp-controller="Order" class="btn btn-sm btn-warning me-1">
        Zpět na přehled objednávek
    </a>
</div>