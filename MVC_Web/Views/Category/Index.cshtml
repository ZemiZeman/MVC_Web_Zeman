@using MVC_Web.Models
@model List<CategoryViewModel>

@{
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MessageType"] mt-2">
        @TempData["Message"]
    </div>
}

<div class="mt-2">
    <a class="btn btn-sm btn-success me-1" asp-controller="Category" asp-action="Add">
        Add
    </a>
    <a class="btn btn-sm btn-dark" asp-controller="Category" asp-action="Index">
        Reload
    </a>
</div>

<table class="table table-hover table-sm text-center mt-2 mb-2">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Název</th>
            <th>Popis</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CategoryViewModel category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-sm btn-warning me-1" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                        Edit
                    </a>
                    <a class="btn btn-sm btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>